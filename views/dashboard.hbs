<h6>Dashboard</h6>
<h3>Welcome, </h3> 
  <div class="chip">
    <img src="{{avatar}}" alt="Profile Image">
    {{name}}
  </div>
<p>Here are you stories</p>

{{#if stories }}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories }}
                <tr>
                    <td><a href="/stories/{{_id}}">{{title}}</a></td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else }}
    <p>Tou have not created any stories</p>
{{/if }}